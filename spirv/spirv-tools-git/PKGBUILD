pkgname=spirv-tools-git
pkgdesc='API and commands for processing SPIR-V modules. (git version)'
pkgver=2023.1
pkgrel=1
commit=93c13345e176f3f8bdb4b07e59c5e3365b3dbf44
arch=(x86_64)
url='https://github.com/KhronosGroup/SPIRV-Tools.git'
license=(Apache-2.0)
makedepends=(make cmake git python ninja gcc gcc-libs spirv-headers)
depends=(gcc-libs)
conflicts=(spirv-tools)
provides=(spirv-tools spirv-tools-git)
source=(git+https://github.com/KhronosGroup/SPIRV-Tools.git#commit=$commit)
md5sums=(SKIP)

pkgver(){
  cd ${srcdir}/SPIRV-Tools

  # cutting off 'foo-' prefix that presents in the git tag
  git describe --long --tags --abbrev=7 --exclude sdk-* --exclude *.rc* | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

